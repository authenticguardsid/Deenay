<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".pages.VerifiedActivity"
    android:orientation="vertical"
    android:background="#ffffff">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingTop="50dp"
        android:paddingBottom="40dp"
        android:background="#f4f4f4">

        <ImageView
            android:id="@+id/iconCertified"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_centerHorizontal="true"
            android:clickable="true"
            android:src="@mipmap/ic_success" />

        <TextView
            android:id="@+id/textCongratulation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/iconCertified"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:textColor="@color/colorBlack"
            android:text="Congratulations !"
            android:textSize="24sp"
            android:textStyle="bold"
            android:typeface="sans" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/textCongratulation"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:paddingTop="0dp"
            android:paddingBottom="10dp"
            android:textColor="@color/colorBlack"
            android:text="Your Product is valid"
            android:textSize="16sp"
            android:textStyle="normal"
            android:typeface="sans" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:layout_marginBottom="8dp">

            <TextView
                android:id="@+id/dtext1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:text="Your certified authentic Deenay provider is :"
                android:textColor="@color/cardview_dark_background"
                android:textSize="14sp"
                android:textStyle="bold"
                android:typeface="sans" />

            <TextView
                android:id="@+id/dtext2"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/dtext1"
                android:layout_marginBottom="8dp"
                android:layout_marginLeft="16dp"
                android:text="Code "
                android:textColor="@color/cardview_dark_background"
                android:textSize="12sp"
                android:textStyle="bold"
                android:typeface="sans" />

            <TextView
                android:id="@+id/dtext2content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/dtext1"
                android:layout_toRightOf="@+id/dtext2"
                android:layout_marginBottom="8dp"
                android:layout_marginLeft="16dp"
                android:text="Code"
                android:textColor="@color/cardview_dark_background"
                android:textSize="12sp"
                android:textStyle="normal"
                android:typeface="sans" />

            <TextView
                android:id="@+id/dtext3"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/dtext2"
                android:layout_marginBottom="8dp"
                android:layout_marginLeft="16dp"
                android:text="Store "
                android:textColor="@color/cardview_dark_background"
                android:textSize="12sp"
                android:textStyle="bold"
                android:typeface="sans" />

            <TextView
                android:id="@+id/dtext3content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/dtext2"
                android:layout_toRightOf="@+id/dtext3"
                android:layout_marginBottom="8dp"
                android:layout_marginLeft="16dp"
                android:text="Store"
                android:textColor="@color/cardview_dark_background"
                android:textSize="12sp"
                android:textStyle="normal"
                android:typeface="sans" />

            <TextView
                android:id="@+id/dtext4"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/dtext3"
                android:layout_marginBottom="8dp"
                android:layout_marginLeft="16dp"
                android:text="Address "
                android:textColor="@color/cardview_dark_background"
                android:textSize="12sp"
                android:textStyle="bold"
                android:typeface="sans" />

            <TextView
                android:id="@+id/dtext4content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/dtext3"
                android:layout_toRightOf="@+id/dtext4"
                android:layout_marginBottom="8dp"
                android:layout_marginLeft="16dp"
                android:text="Address"
                android:textColor="@color/cardview_dark_background"
                android:textSize="12sp"
                android:textStyle="normal"
                android:typeface="sans" />

            <TextView
                android:id="@+id/dtext5"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/dtext4content"
                android:layout_marginBottom="8dp"
                android:layout_marginLeft="16dp"
                android:text="Phone "
                android:textColor="@color/cardview_dark_background"
                android:textSize="12sp"
                android:textStyle="bold"
                android:typeface="sans" />

            <TextView
                android:id="@+id/dtext5content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/dtext4content"
                android:layout_toRightOf="@+id/dtext4"
                android:layout_marginBottom="8dp"
                android:layout_marginLeft="16dp"
                android:text="Phone"
                android:textColor="@color/cardview_dark_background"
                android:textSize="12sp"
                android:textStyle="normal"
                android:typeface="sans" />

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/dtext5"
                android:layout_marginBottom="8dp"
                android:layout_marginLeft="16dp"
                android:text="Website "
                android:textColor="@color/cardview_dark_background"
                android:textSize="12sp"
                android:textStyle="bold"
                android:typeface="sans" />

            <TextView
                android:id="@+id/dtext6content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/dtext5content"
                android:layout_toRightOf="@+id/dtext4"
                android:layout_marginBottom="8dp"
                android:layout_marginLeft="16dp"
                android:text="Website"
                android:textColor="@color/cardview_dark_background"
                android:textSize="12sp"
                android:textStyle="normal"
                android:typeface="sans" />

        </RelativeLayout>

        <TextView
            android:id="@+id/dtext7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="@color/colorGREY"
            android:text="Apakah product diatas tidak sesuai dengan yang ada ?"
            android:textSize="11sp"
            android:textStyle="italic"
            android:typeface="sans" />

        <TextView
            android:layout_below="@+id/dtext7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Jika ya, laporkan di sini"
            android:textSize="11sp"
            android:textStyle="normal"
            android:typeface="sans" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="CLAIM"
            android:textColor="@color/colorWhite"
            android:background="@color/colorGreen"
            android:layout_margin="16dp" />

    </LinearLayout>

</LinearLayout>