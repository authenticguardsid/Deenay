<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".pages.VerifiedActivity"
    android:background="#ffffff">

    <LinearLayout
        android:id="@+id/headerCertified"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingTop="50dp"
        android:paddingBottom="40dp"
        android:background="#f4f4f4">

        <ImageView
            android:id="@+id/iconCertified"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_centerHorizontal="true"
            android:clickable="true"
            android:src="@mipmap/ic_error" />

        <TextView
            android:id="@+id/textCongratulation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/iconCertified"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:paddingTop="10dp"
            android:paddingBottom="5dp"
            android:textColor="@color/colorBlack"
            android:text="OOPS !"
            android:textSize="23sp"
            android:textStyle="bold"
            android:typeface="sans" />

        <TextView
            android:id="@+id/textSubCong"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/textCongratulation"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:paddingTop="0dp"
            android:paddingBottom="10dp"
            android:textColor="@color/colorBlack"
            android:text="Your Product is invalid"
            android:textSize="13sp"
            android:textStyle="normal"
            android:typeface="sans" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout4"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_centerHorizontal="true"
        android:orientation="vertical"
        android:gravity="bottom"
        android:layout_centerVertical="true"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="20dp">

        <TextView
            android:id="@+id/dtext7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:textColor="@color/colorGREY"
            android:text="Apakah product diatas tidak sesuai dengan yang ada ?"
            android:textSize="10sp"
            android:textStyle="italic"
            android:typeface="sans" />

        <TextView
            android:id="@+id/dtext8"
            android:layout_below="@+id/dtext7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:text="Jika ya, laporkan di sini"
            android:textSize="10sp"
            android:textStyle="normal"
            android:typeface="sans" />

        <Button
            android:id="@+id/buttonReport"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="LAPOR"
            android:textColor="@color/colorWhite"
            android:background="@color/colorRed"
            android:layout_marginTop="10dp" />

    </LinearLayout>

</RelativeLayout>