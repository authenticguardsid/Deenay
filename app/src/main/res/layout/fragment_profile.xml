<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="#e7e7e7">

            <RelativeLayout
                android:id="@+id/boxAccount1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorWhite"
                android:layout_marginTop="4dp"
                android:padding="16dp">

                <TextView
                    android:id="@+id/textEditProfile"
                    android:layout_toRightOf="@+id/textFname"
                    android:layout_alignParentEnd="true"
                    android:gravity="end"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorSecondary"
                    android:text="EDIT"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:typeface="normal"
                    android:layout_marginBottom="5dp" />

                <TextView
                    android:id="@+id/textFname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorGREY"
                    android:text="NAME"
                    android:textSize="14sp"
                    android:typeface="normal"
                    android:layout_marginBottom="5dp" />

                <TextView
                    android:id="@+id/textEmail"
                    android:layout_below="@+id/textFname"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorGREY"
                    android:text="EMAIL"
                    android:textSize="14sp"
                    android:textStyle="normal"
                    android:typeface="normal" />

                <TextView
                    android:id="@+id/textPhone"
                    android:layout_below="@+id/textEmail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="5dp"
                    android:textColor="@color/colorGREY"
                    android:text="PHONE"
                    android:textSize="14sp"
                    android:textStyle="normal"
                    android:typeface="normal" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/boxAccount2"
                android:layout_below="@+id/boxAccount1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorWhite"
                android:layout_marginTop="8dp"
                android:padding="16dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Connected as:"
                        android:paddingBottom="16dp"/>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/iconTrophy"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_marginLeft="4dp"
                            android:clickable="true"
                            android:src="@drawable/facebook" />

                        <TextView
                            android:layout_toRightOf="@+id/iconTrophy"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/colorGREY"
                            android:text="CONNECTED WITH FACEBOOK"
                            android:textSize="14sp"
                            android:typeface="normal"
                            android:layout_marginTop="2dp"
                            android:layout_marginLeft="16dp"/>

                    </LinearLayout>

                </LinearLayout>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/boxAccount3"
                android:layout_below="@+id/boxAccount2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorWhite"
                android:layout_marginTop="8dp"
                android:padding="10dp">

                <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/colorWhite">

                    <RelativeLayout
                        android:id="@+id/pmenu1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/colorWhite"
                        android:layout_marginTop="8dp"
                        android:padding="10dp">

                        <ImageView
                            android:id="@+id/iconHelp"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_marginTop="5dp"
                            android:clickable="true"
                            android:src="@drawable/a_help" />

                        <TextView
                            android:layout_toRightOf="@+id/iconHelp"
                            android:layout_alignParentRight="true"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="24dp"
                            android:layout_marginTop="6dp"
                            android:textColor="@color/colorGREY"
                            android:text="FAQ"
                            android:textSize="14sp"
                            android:textStyle="normal"
                            android:typeface="normal" />

                        <View
                            android:layout_below="@+id/iconHelp"
                            android:layout_width="fill_parent"
                            android:layout_height="1px"
                            android:layout_marginTop="10dp"
                            android:layout_marginLeft="40dp"
                            android:background="@color/colorGREY" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/pmenu2"
                        android:layout_below="@+id/pmenu1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/colorWhite"
                        android:padding="10dp">

                        <ImageView
                            android:id="@+id/iconLanguange"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_marginTop="5dp"
                            android:clickable="true"
                            android:src="@drawable/a_languange" />

                        <TextView
                            android:layout_toRightOf="@+id/iconLanguange"
                            android:layout_alignParentRight="true"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="24dp"
                            android:layout_marginTop="6dp"
                            android:textColor="@color/colorGREY"
                            android:text="Change Language"
                            android:textSize="14sp"
                            android:textStyle="normal"
                            android:typeface="normal" />

                        <View
                            android:layout_below="@+id/iconLanguange"
                            android:layout_width="fill_parent"
                            android:layout_height="1px"
                            android:layout_marginTop="10dp"
                            android:layout_marginLeft="40dp"
                            android:background="@color/colorGREY" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/pmenu3"
                        android:layout_below="@+id/pmenu2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/colorWhite"
                        android:padding="10dp">

                        <ImageView
                            android:id="@+id/iconTerm"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_marginTop="5dp"
                            android:clickable="true"
                            android:src="@drawable/a_info" />

                        <TextView
                            android:layout_toRightOf="@+id/iconTerm"
                            android:layout_alignParentRight="true"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="24dp"
                            android:layout_marginTop="6dp"
                            android:textColor="@color/colorGREY"
                            android:text="Term of Services"
                            android:textSize="14sp"
                            android:textStyle="normal"
                            android:typeface="normal" />

                        <View
                            android:layout_below="@+id/iconTerm"
                            android:layout_width="fill_parent"
                            android:layout_height="1px"
                            android:layout_marginTop="10dp"
                            android:layout_marginLeft="40dp"
                            android:background="@color/colorGREY" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/pmenu4"
                        android:layout_below="@+id/pmenu3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/colorWhite"
                        android:padding="10dp">

                        <ImageView
                            android:id="@+id/iconPrivacy"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_marginTop="5dp"
                            android:clickable="true"
                            android:src="@drawable/a_privacy" />

                        <TextView
                            android:layout_toRightOf="@+id/iconPrivacy"
                            android:layout_alignParentRight="true"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="24dp"
                            android:layout_marginTop="6dp"
                            android:textColor="@color/colorGREY"
                            android:text="Privacy Policy"
                            android:textSize="14sp"
                            android:textStyle="normal"
                            android:typeface="normal" />

                        <View
                            android:layout_below="@+id/iconPrivacy"
                            android:layout_width="fill_parent"
                            android:layout_height="1px"
                            android:layout_marginTop="10dp"
                            android:layout_marginLeft="40dp"
                            android:background="@color/colorGREY" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/pmenu5"
                        android:layout_below="@+id/pmenu4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/colorWhite"
                        android:padding="10dp">

                        <ImageView
                            android:id="@+id/iconStars"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_marginTop="5dp"
                            android:clickable="true"
                            android:src="@drawable/a_stars" />

                        <TextView
                            android:layout_toRightOf="@+id/iconStars"
                            android:layout_alignParentRight="true"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="24dp"
                            android:layout_marginTop="6dp"
                            android:textColor="@color/colorGREY"
                            android:text="Rate Deenay App"
                            android:textSize="14sp"
                            android:textStyle="normal"
                            android:typeface="normal" />

                        <View
                            android:layout_below="@+id/iconStars"
                            android:layout_width="fill_parent"
                            android:layout_height="1px"
                            android:layout_marginTop="10dp"
                            android:layout_marginLeft="40dp"
                            android:background="@color/colorGREY" />

                    </RelativeLayout>

                </RelativeLayout>

            </RelativeLayout>

            <Button
                android:id="@+id/logoutBtn"
                android:layout_below="@+id/boxAccount3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="LOG OUT"
                android:background="@color/colorWhite"
                android:textColor="@color/colorRed"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp" />

        </RelativeLayout>

    </ScrollView>

</RelativeLayout>
